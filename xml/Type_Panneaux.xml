<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<racine xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="Type_PanneauxSchema.xsd">
        <BDD>
        	<!-- Les types de panneaux -->
        	<typePanneaux>
        		<!-- Limitation -->
        		<typePanneau>
        			<idType> 1 </idType>
        			<forme> circulaire </forme>
        			<libelle> Limitation </libelle>
        			<couleur> Rouge </couleur>
        		</typePanneau>
        		<!-- Danger -->
        		<typePanneau>
        			<idType> 2 </idType>
        			<forme> triangulaire </forme>
        			<libelle> danger </libelle>
        			<couleur> Rouge </couleur>
        		</typePanneau>
        		<!-- Arret -->
        		<typePanneau>
        			<idType> 3 </idType>
        			<forme> hexagonal </forme>
        			<libelle> stop </libelle>
        			<couleur> Rouge </couleur>
        		</typePanneau>
        		<!-- Indication -->
        		<typePanneau>
        			<idType> 4 </idType>
        			<forme> carre </forme>
        			<libelle> indication </libelle>
        			<couleur> Bleu </couleur>
        		</typePanneau>
        		<!-- Obligation -->
        		<typePanneau>
        			<idType> 5 </idType>
        			<forme> circulaire </forme>
        			<libelle> Obligation </libelle>
        			<couleur> Bleu </couleur>
        		</typePanneau>
        		<!-- Interdiction -->
        		<typePanneau>
        			<idType> 6 </idType>
        			<forme> circulaire </forme>
        			<libelle> Obligation </libelle>
        			<couleur > Rouge </couleur>
        		</typePanneau>
        	</typePanneaux>
        </BDD>
</racine>