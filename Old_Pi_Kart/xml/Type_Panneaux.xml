<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<racine xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="Type_PanneauxSchema.xsd">
        <BDD>
        	<!-- Les types de panneaux -->
        	<typePanneaux>
        		<!-- Limitation -->
        		<typePanneau>
        			<idType>1</idType>
        			<forme>Circulaire</forme>
        			<libelle>Limitation</libelle>
        			<couleur>Rouge</couleur>
        		</typePanneau>
        		<!-- Danger -->
        		<typePanneau>
        			<idType>2</idType>
        			<forme>Triangulaire</forme>
        			<libelle>Danger</libelle>
        			<couleur>Rouge</couleur>
        		</typePanneau>
        		<!-- Arret -->
        		<typePanneau>
        			<idType>3</idType>
        			<forme>Hexagonal</forme>
        			<libelle>Stop</libelle>
        			<couleur>Rouge</couleur>
        		</typePanneau>
        		<!-- Indication -->
        		<typePanneau>
        			<idType>4</idType>
        			<forme>Carre</forme>
        			<libelle>Indication</libelle>
        			<couleur>Bleu</couleur>
        		</typePanneau>
        		<!-- Obligation -->
        		<typePanneau>
        			<idType>5</idType>
        			<forme>circulaire</forme>
        			<libelle>Obligation</libelle>
        			<couleur>Bleu</couleur>
        		</typePanneau>
        		<!-- Interdiction -->
        		<typePanneau>
        			<idType>6</idType>
        			<forme>Circulaire</forme>
        			<libelle>Obligation</libelle>
        			<couleur>Rouge</couleur>
        		</typePanneau>
        	</typePanneaux>
        </BDD>
</racine>